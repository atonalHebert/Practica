<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvMiMascota"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/cardview_borde_mi_mascota"
    android:layout_marginRight="@dimen/cardview_borde_mi_mascota"
    android:layout_marginTop="@dimen/cardview_borde_mi_mascota"
    card_view:cardCornerRadius="@dimen/corner_radius_cardview_mi_mascota">

    <!--Fotos de mi mascota-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/margen_foto_mi_mascota">

        <!--Foto de la mascota-->
        <ImageView
            android:id="@+id/imgFotoMiMascota"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/ancho_foto_mi_mascota"
            android:layout_gravity="center"
            android:src="@drawable/bulbasaur"/>

        <!--Datos de la mascota-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--Rating de mascota-->
            <TextView
                android:id="@+id/tvRatingMiMascota"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rating_mascota"
                android:textSize="@dimen/cardview_texto_mi_mascota"
                android:layout_alignParentLeft="true" />

            <!--Ãcono de hueso dorado-->
            <ImageView
                android:id="@+id/imgHuesoDoradoMiMascota"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/icons8_dog_bone_100_gold"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>